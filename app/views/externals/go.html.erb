<h1><%= t('txt.registration.external.colorado.go.title') %></h1>

<div id="external">

  <div class="text">
    <p><%= t('txt.registration.external.colorado.go.p1') %></p>
  </div>

  <div class="review">
    <div class="section">
      <fieldset>
        <legend><%= t('txt.registration.external.colorado.go.section') %></legend>
        <ul>
          <li>
            <span><%= t('txt.registration.name') %></span>
            <div><%=h @registrant.full_name %></div>
          </li>
          <li>
            <span><%= t('activerecord.attributes.registrant.date_of_birth') %></span>
            <div><%=h @registrant.date_of_birth.strftime("%B %e, %Y") %></div>
          </li>
          <li>
            <span><%= t('txt.registration.external.colorado.go.colorado_id_number') %></span>
            <div><%=h @registrant.state_id_number %></div>
          </li>
        </ul>
      </fieldset>
    </div>
  </div>

  <div class="text">
    <p><%= t('txt.registration.external.colorado.go.p2', :co_url => '"http://www.sos.state.co.us/Voter/regVoterIntro.do"') %></p>
    <p><%= t('txt.registration.external.colorado.go.p3') %></p>
  </div>
</div>
