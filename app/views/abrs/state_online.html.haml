- unless @abr.oabr_for_all?
  :javascript
    $(document).ready(function() {
      var section = $("#abr_state_online_abr_section");
      section.hide();
      $("#confirm_state_online_abr").click(function(e) {
        e.preventDefault();
        e.stopPropagation();
        section.show();
      })
    
    })
  
= form_for(@abr) do |form|
  %h3= I18n.t("states.custom.#{@abr.home_state_abbrev.downcase}.state_online_abr.header")
  - unless @abr.oabr_for_all?
    %p.instructions= I18n.t("states.custom.#{@abr.home_state_abbrev.downcase}.state_online_abr.requirements")
    %p.instructions
      %a{href: "#", id: "confirm_state_online_abr"}= I18n.t("states.custom.#{@abr.home_state_abbrev.downcase}.state_online_abr.confirm")
    
  #abr_state_online_abr_section
    %p.instructions= I18n.t("states.custom.#{@abr.home_state_abbrev.downcase}.state_online_abr.instructions")
    = rollover_button(:state_online_registration, I18n.t('txt.button.state_online_abr', :state=>@abr.home_state_name).html_safe, {:id=>'abr_state_online_abr',:name=>'abr_state_online_abr',:value=>'abr_state_online_abr'}) 
    :javascript
      $(document).ready(function() {
        $("#abr_state_online_abr").attr('formtarget','_BLANK')      
      });
  
      $("#abr_state_online_abr").click(function() {
        showSharing();
        return true;
      })
      function showSharing() {
        setTimeout(function(){
          //console.log("redirect!")
          window.location.href = "#{finish_abr_path(@abr, :share_only=>true)}";
        }, 1000);
      }
  - unless @abr.oabr_for_all?
    %p
      = link_to I18n.t('txt.abr.skip_state_online_abr'), step_3_abr_path(@abr)
  
  
    
