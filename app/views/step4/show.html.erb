<h1><%= t('txt.registration.step_4_header') %></h1>

<% form_for(@registrant, :url => registrant_step_4_path(@registrant)) do |form| %>
  <ul class="checkbox">
    <li>
      <h3>
        <%= form.check_box :opt_in_email %>
        <%= form.label :opt_in_email, t('txt.registration.opt_in_email', :email_address => h(@registrant.email_address)) %>
      </h3>
    </li>
  </ul>
  <div class="checkbox-explanation">
    <p><%= t('txt.registration.instructions.opt_in_email') %></p>
  </div>

<% unless @question_1.blank? && @question_2.blank? && !@registrant.partner.ask_for_volunteers? %>
  <fieldset class="questions">
    <legend><%= t('txt.registration.survey_title') %></legend>
    <% unless @question_1.blank? %>
      <ul class="question">
        <li class="width_e">
          <h3><%= form.label :survey_answer_1, h(@question_1) %></h3>
          <%= field_div form, :survey_answer_1, :maxlength => 60 %>
        </li>
      </ul>
    <% end %>
    <% unless @question_2.blank? %>
      <ul class="question">
        <li class="width_e">
          <h3><%= form.label :survey_answer_2, h(@question_2) %></h3>
          <%= field_div form, :survey_answer_2, :maxlength => 60 %>
        </li>
      </ul>
    <% end %>
    <% if @registrant.partner.ask_for_volunteers? %>
      <ul class="checkbox">
        <li>
          <h3>
            <%= form.check_box :volunteer %>
            <%= form.label :volunteer, t('txt.registration.volunteer', :organization => h(@registrant.partner.organization)) %>
          </h3>
        </li>
      </ul>
    <% end %>
  </fieldset>
<% end %>

  <%= rollover_button(:review, I18n.t('txt.button.review')) %>
  <div class="back"><%= link_to t('txt.button.back'), registrant_step_3_path(@registrant) %></div>
<% end %>
