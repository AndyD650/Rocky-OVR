<h1><%= I18n.t('txt.registration.finish_header') %></h1>
<div class="fulltext"><p><%= I18n.t('txt.registration.instructions.finish') %></p></div>
<div class="share">
  <div><%= link_to image_tag("share-facebook.gif"), "http://www.facebook.com/" %></div>
  <div><%= link_to image_tag("share-twitter.gif"), "http://twitter.com/" %></div>
  <div><%= link_to image_tag("share-googlebuzz.gif"), "http://www.google.com/buzz" %></div>
</div>

<% form_for(:tell_friend, @registrant, :url => registrant_tell_friends_path(@registrant), :method => :post) do |form| %>
  <fieldset>
    <legend><%= I18n.t('txt.registration.tell_a_friend_title') %></legend>
    <ul class="stacked">
      <li class="width_a">
        <h3><%= form.label :tell_from, "From:" %></h3>
        <%= field_div form, :tell_from %>
        <span class="error"><%= form.object.errors.on :tell_from %></span>
      </li>
      <li class="width_a">
        <h3><%= form.label :tell_email, "Your Email:" %></h3>
        <%= field_div form, :tell_email %>
        <span class="error"><%= form.object.errors.on :tell_email %></span>
      </li>
    </ul>
    <ul class="stacked">
      <li class="width_a">
        <h3><%= form.label :tell_recipients, "Recipients:" %></h3>
        <%= field_div form, :tell_recipients %>
        <span class="error"><%= form.object.errors.on :tell_recipients %></span>
      </li>
    </ul>
    <ul class="stacked">
      <li class="width_a">
        <h3><%= form.label :tell_subject, "Subject:" %></h3>
        <%= field_div form, :tell_subject %>
        <span class="error"><%= form.object.errors.on :tell_subject %></span>
      </li>
    </ul>
    <ul class="flat">
      <li>
        <h3><%= form.label :tell_message, "Personal Message:" %></h3>
        <div><%= form.text_area :tell_message %></div>
      </li>
    </ul>
  </fieldset>
  <%= rollover_button(:sendemail, I18n.t('txt.button.submit')) %>
<% end %>

<div class="fulltext">
  <p class="bold">
    <%= I18n.t('txt.registration.instructions.finish_2') %>
    <a href="http://www.rockthevote.com/partner">http://www.rockthevote.com/partner</a>
  </p>
</div>
